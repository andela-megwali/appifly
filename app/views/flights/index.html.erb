<h1>Listing Flights</h1>
<h3>Page <%= params[:page] %></h3>
<%= will_paginate @flights, renderer: BootstrapPagination::Rails  %>
<table class="table">
  <thead>
    <tr>
      <th>Index</th>
      <th>Origin Airport</th>
      <th>Destination</th>
      <th>Seats</th>
      <th>Departure</th>
      <th>Arrival</th>
      <th>Airline</th>
      <th>Flight code</th>
      <th>Flight type</th>
      <th>Flight cost</th>
      <th>Flight status</th>
      <th colspan="3">Admin Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each_with_index do |flight, index| %>
      <tr>
        <td><%= ((params[:page].to_i - 1) * 30) + (index + 1) %></td>
        <td><%= flight.origin %></td>
        <td><%= flight.destination %></td>
        <td><%= flight.seat %></td>
        <td><%= flight.departure.strftime("%d/%m/%Y %H:%M") %></td>
        <td><%= flight.arrival.strftime("%d/%m/%Y %H:%M") %></td>
        <td><%= flight.airline %></td>
        <td><%= flight.code %></td>
        <td><%= flight.jurisdiction %></td>
        <td>$ <%= flight.cost %></td>
        <% if flight.status == "Cancelled" %>
          <td>Cancelled</td>
        <% elsif flight.departure > Time.now %>
          <td>Booking</td>
        <% elsif flight.departure < Time.now && Time.now < flight.arrival %>
          <td>In Transit</td>
        <% else %>
          <td>Past</td>
        <% end %>
        <td><%= link_to "Show", flight %></td>
        <td><%= link_to "Edit", edit_flight_path(flight) %></td>
        <td><%= link_to "Remove", flight, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @flights, renderer: BootstrapPagination::Rails  %>

<br>

