<h1>Listing Airports</h1>
<%= will_paginate @airports, renderer: BootstrapPagination::Rails  %>
<table class="table">
  <thead>
    <tr>
      <th>Index</th>
      <th>Airport Name</th>
      <th>Jurisdiction</th>
      <th>State (Code)</th>
      <th>Country</th>
      <th>Continent</th>
      <th>Rating</th>
      <th colspan="3">Admin Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @airports.each_with_index do |airport, index| %>
      <tr>
        <td><%= index_for_pagination(index) %></td>
        <td><%= airport.name %></td>
        <td><%= airport.jurisdiction %></td>
        <td><%= airport.state_and_code %></td>
        <td><%= airport.country %></td>
        <td><%= airport.continent %></td>
        <td><%= airport.rating %></td>
        <td><%= link_to "Show", airport %></td>
        <td><%= link_to "Edit", edit_airport_path(airport) %></td>
        <td><%= link_to "Remove", airport, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @airports, renderer: BootstrapPagination::Rails  %>

<br>

