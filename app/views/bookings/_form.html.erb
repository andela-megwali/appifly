<div class="col-sm-12">
  <div class="col-sm-6">
    <table>
  	  <thead>
  	    <tr>
  	      <th colspan="2">Booking Flight <%=@flight_selected.flight_code%></th>
  	    </tr>
  	  </thead>
  	  <tbody>
  	    <tr>
  	      <td>Origin:</td>
  	      <td><%= @flight_selected.origin %></td>
  	    </tr>
  	    <tr>
  	      <td>Destination:</td>
  	      <td><%= @flight_selected.destination %></td>
  	    </tr>
  	    <tr>
  	      <td>Departure Time:</td>
  	      <td><%= @flight_selected.departure.strftime("%d/%m/%Y %H:%M") %></td>
  	    </tr>
  	    <tr>
  	      <td>Time of Arrival:</td>
  	      <td><%= @flight_selected.arrival.strftime("%d/%m/%Y %H:%M") %></td>
  	    </tr>
  	    <tr>
  	      <td>Flight Jurisdiction:</td>
  	      <td><%= @flight_selected.flight_type %></td>
  	    </tr>
  	    <tr>
  	      <td>Flight Costs:</td>
  	      <td>$ <%= @flight_selected.flight_cost %> per person (Economy)</td>
  	    </tr>
        <tr>
          <td></td>
          <td>$ <%= @flight_selected.flight_cost * 1.5 %> per person (Business)</td>
        </tr>
        <tr>
          <td></td>
          <td>$ <%= @flight_selected.flight_cost * 2 %> per person (First)</td>
        </tr>
  	    <tr>
  	      <td>Airline:</td>
  	      <td><%= @flight_selected.airline %></td>
  	    </tr>
  	    <tr>
  	      <td>Travel Class:</td>
  	      <% if @passenger_enquiry %>
          <td><%= @passenger_enquiry["Travel Class"] %></td>
          <% else %>
          <td><%= @booking.travel_class %></td>
          <% end %>
  	    </tr>
  	    <tr>
  	      <td>Number of Passengers Travelling:</td>
          <% if @passenger_enquiry %>
  	      <td><%= @passenger_enquiry["Number Travelling"] %></td>
          <% else %>
          <td><%= @booking.passengers.count %></td>
          <% end %>
  	    </tr>
  	  </tbody>
    </table>
  </div>

  <% if session[:user_id] %>
    <% @user = User.find(session[:user_id]) %>
    <div class="col-sm-6">
      <table>
        <thead>
          <tr>
            <th colspan="2"> Your User Profile </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Title:</td>
            <td><%= @user.title %></td>
          </tr>
          <tr>
            <td>Firstname:</td>
            <td><%= @user.firstname %></td>
          </tr>
          <tr>
            <td> Lastname:</td>
              <td><%= @user.lastname %></td>
          </tr>
          <tr>
            <td>Username:</td>
            <td><%= @user.username %></td>
          </tr>
          <tr>
            <td>Email:</td>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <td>Telephone:</td>
            <td><%= @user.telephone %></td>
          </tr>
        </tbody>
      </table><br>
      <%= link_to "View All My Bookings", past_bookings_path %><br>
      <%= link_to "View All Appifly Bookings", bookings_path if User.find(session[:user_id]).admin_user %>
    </div>
  <% else %>
    <h1>Notice</h1>
    <h3> You can make a one off anonymous booking or <%= link_to "SignUp", new_user_path %> to access and manage your bookings in the future.</h3>
    <p> Once you create your booking you will not be able to edit / make changes to it. You would still be able to view it though.</p> 
    <p>Please sign in or create an account so you can manage your bookings when you desire.</p>
  <% end %>
</div>

<div>
  <%= form_for(@booking) do |f| %>
    <% if @booking.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h2>
        <ul>
          <% @booking.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="col-md-12 form-group">
      <div class="header-nav"></div>
        <%= f.label :travel_class, "Set / Change Travel Class" %><br>
        <%= f.select :travel_class, ["Economy", "Business", "First"] %>
    </div>
    <div class="col-md-4 form-group">
      <%= f.fields_for :passengers do |passenger_details| %>
        <h3> Passenger Details </h3>
        <div class="field">
          <%= passenger_details.label :title %><br>
          <%= passenger_details.text_field :title %>
        </div>
        <div class="field">
          <%= passenger_details.label :firstname %><br>
          <%= passenger_details.text_field :firstname %>
        </div>
        <div class="field">
          <%= passenger_details.label :lastname %><br>
          <%= passenger_details.text_field :lastname %>
        </div>
        <div class="field">
          <%= passenger_details.label :email %><br>
          <%= passenger_details.text_field :email %>
        </div>
        <div class="field">
          <%= passenger_details.label :telephone %><br>
          <%= passenger_details.text_field :telephone %>
        </div>
        <div class="field">
          <%= passenger_details.label :nationality %><br>
          <%= passenger_details.text_field :nationality %>
        </div>
        <div class="field">
          <%= passenger_details.label :luggage %><br>
          <%= passenger_details.select :luggage, ["No", "Yes"] %>
        </div>
        <div class="field">
          <%= passenger_details.label :_destroy, "Remove this passenger" %>
          <%= passenger_details.check_box :_destroy%>
        </div>
      <% end %><br>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>
<div class="col-md-12">
  <%= link_to "Find a different flight", root_path %><br>
</div>
