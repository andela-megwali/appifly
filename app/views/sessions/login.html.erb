<div class="col-md-12">
  <h3>Log in</h3>
</div>
<div class="col-md-4">
  <%= bootstrap_form_for(:sign_in, :url => {:action => "attempt_login"}) do |f| %>
  <div class="form-group">
    <%= f.text_field :username, required: true %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, required: true %>
  </div>
  <div class="form-group">
    <%= f.submit("Sign In") %>
  </div>
  <% end %>
</div>